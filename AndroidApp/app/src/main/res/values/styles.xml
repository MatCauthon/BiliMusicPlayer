<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="MyThemeBlu">

    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorTheme</item>
        <item name="colorAccent">@color/colorTheme</item>
    </style>
    <!-- 正常的theme -->
    <style name="MyThemeBlu" parent="Theme.AppCompat.Light.NoActionBar">

        <!--选中状态icon的颜色和字体颜色-->
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorTheme</item>
        <item name="colorAccent">@color/colorTheme</item>
        <item name="android:windowAnimationStyle">@style/default_animation</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>
    <!-- 歌单列表的theme-->
    <style name="MyThemeTransparent" parent="Theme.AppCompat.Light.NoActionBar">

        <!--选中状态icon的颜色和字体颜色-->
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorTheme</item>
        <item name="colorAccent">@color/colorTheme</item>
        <item name="android:windowAnimationStyle">@style/default_animation</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <!--titleBar样式-->
    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionBarItemBackground">@drawable/toolbarItemBackground</item>
        <item name="selectableItemBackground">@drawable/toolbarItemBackground</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:textSize">18sp</item> &lt;!&ndash;  搞掂字体大小&ndash;&gt;-->
    </style>

    <!-- 默认Activity跳转动画 -->
    <style name="default_animation" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_up_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_up_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_down_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_down_out</item>
    </style>

    <!--titlebar 标题-->
    <style name="ToolBar.Title.Normal" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="ToolBar.Title.Selected" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="FullscreenTheme" parent="MyThemeTransparent">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Launcher" parent="FullscreenTheme">
        <item name="android:windowNoTitle">true</item>
    <item name="android:windowBackground">@drawable/launch_screen</item>
    <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
    <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

</resources>
